<h1>Write a Post</h1>

<% if @test %>
	<%= @error %>
<% else %>
	<% @test = false %>
<% end %>

<%= form_for :post, url: posts_path do |f| %>
	
	<p>
		<%= f.label :title %><br>
		<%= f.text_field :title %>
	<p>

	
	<p>
		<%= f.label :text %><br>
		<%= f.text_field :text %>
	</p>

	<p>
		<%= f.submit %>
	</p>

<% end %>

<%= link_to 'Back', posts_path %>
